<%- include('../../partials/header') -%>
<%- include('../../partials/navbar') -%>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Títulos</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(categorie => { %>
                <tr>
                    <th><%= categorie.id %></th>
                    <th><%= categorie.title %></th>
                    <th><%= categorie.slug %></th>
                    <th></th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer') -%>