<%- include('partials/header') -%>
<%- include('partials/homenavbar') -%>
<body>        
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem Vindo</h1>
            <p class="lead">Este é um simples Blog criado por mim </p>
            <hr class="my-4">
            <p>Descrição Detalhada</p>
            <a href="#" class="btn btn-primary btn-lg" role="button">Leia Mais</a>
        </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>

<%- include('partials/footer') -%>